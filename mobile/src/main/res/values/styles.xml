<resources>
    <style name="Theme.SafeFitness" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
    </style>
    <style name="Theme.SafeFitness.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="android:windowSplashScreenAnimationDuration">1500</item>
        <item name="android:windowSplashScreenBackground">@color/white</item>
    </style>
</resources>
